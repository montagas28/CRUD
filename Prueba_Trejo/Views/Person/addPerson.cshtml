@model Prueba_Trejo.Models.ViewPerson.Person
@{
    ViewBag.Title = "Agregar Persona";
}

<h2>Agregar Persona</h2>
<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm("addPerson", "Person",FormMethod.Post,new {role="form",@class=""}))
         {
            @Html.AntiForgeryToken()
            @Html.ValidationMessage("error", new {@class="text-danger"})
            @Html.LabelFor(d=>d.name)
            @Html.TextBoxFor(d=>d.name,new{ @class = "form-control"})
            @Html.ValidationMessage("name",new {@class="text_danger"})
            <div style="text-align:right;">
                <input type="submit" class="btn btn-success" value="Guardar"/>

            </div>
         }
    </div>
</div>


